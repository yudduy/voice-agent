# MongoDB
MONGODB_URI=mongodb+srv://your-mongodb-connection-string
DB_NAME=your_db_name # Optional: Specify DB name if not in URI
MONITOR_ENABLED=true # Enable/disable contact monitoring service
MONITOR_IMMEDIATE_CALL=true # Call new contacts immediately upon detection
MONITOR_CALL_DELAY_MS=300000 # Delay before calling (if MONITOR_IMMEDIATE_CALL=false)
MONITOR_RATE_LIMIT_CALLS=10 # Max calls per interval
MONITOR_RATE_LIMIT_INTERVAL_MS=60000 # Interval for rate limit (in ms)
MONITOR_BATCH_SIZE=50 # How many contacts to process per scan batch

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Hyperbolic AI (Optional - for enhanced TTS)
# Used if enabling Hyperbolic Text-to-Speech feature
HYPERBOLIC_API_KEY=your_hyperbolic_api_key

# Speech Service Preferences
ENABLE_RECORDING=true # Set to true in Twilio settings to enable recording for Whisper/Groq
SPEECH_RECOGNITION_PREFERENCE=groq # Use 'groq', 'whisper', or 'twilio'

# Groq API for Speech-to-Text (if SPEECH_RECOGNITION_PREFERENCE='groq')
GROQ_API_KEY=your_groq_api_key
GROQ_WHISPER_MODEL=whisper-large-v3 # Use whisper-large-v3 or whisper-large-v3-turbo based on need
ENABLE_GROQ_TRANSCRIPTION=true # Explicit flag to enable Groq STT

# Server config
PORT=3000
WEBHOOK_BASE_URL=https://your-webhook-domain.com

# Optional settings
# AI_TEMPERATURE=0.3 # Set OpenAI model temperature
# AI_MAX_TOKENS=200 # Set OpenAI max response tokens
# DISABLE_SCHEDULER=true  # Uncomment to disable automatic scheduled calls
# NODE_ENV=production     # Set to 'production' for production environment
